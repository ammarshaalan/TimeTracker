@using Newtonsoft.Json

<div class="container">
    <h2>Employee Time Tracker</h2>
    @{
        string employeesJson = JsonConvert.SerializeObject(Model);
    }
    <a href="@Url.Action("PieChart", "Employee", new { employeesJson = employeesJson })" class="btn btn-primary">View Pie Chart</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Total Time Worked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                var color = employee.TotalTimeWorked < 100 ? "danger" : "primary";
                <tr class="@color">
                    <td>@employee.Name</td>
                    <td>@employee.TotalTimeWorked hours</td>
                </tr>
            }
        </tbody>
    </table>
</div>
